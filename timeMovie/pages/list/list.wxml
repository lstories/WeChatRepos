<!--pages/list/list.wxml-->
<view class="container1">
  <view>A</view>
  <view>B</view>
  <view>C</view>
</view>

<!-- 注意: 使用书香滚动时, 必须给scroll-view, 一个固定高度 -->
<scroll-view class="container2" scroll-y>
  <view>A</view>
  <view>B</view>
  <view>C</view>
</scroll-view>
<!-- indicator-docts属性: 显示面板指示点 -->
<!-- 
  indicator-dots : 是否显示面板指示点
  indicator-color : 指示点颜色
  indicator-dots : 当前选中的指示点颜色
  autoplay : 是否自动切换
  interval : 自动切换时间间隔
  circular : 是否采用衔接滑动
 -->
<swiper class="swiper-container" indicator-dots>
  <!-- 第一项 -->
  <swiper-item>
    <view class="item">A</view>
  </swiper-item>
  <!-- 第二项 -->
  <swiper-item>
    <view class="item">B</view>
  </swiper-item>
  <!-- 第三项 -->
  <swiper-item>
    <view class="item">C</view>
  </swiper-item>
</swiper>
<!-- 常用的基础内容组件 text 和 rich-text 的用户 -->
<view>
  手机号长按使用:
  <text selectable>13422977794</text>
</view>
<rich-text nodes="<h1 style='color: red;'>标题</h1>"></rich-text>
<!-- button组件 -->
<view>
  <view>------------通过type指定按钮类型------------</view>
  <button>默认按钮</button>
  <button type="primary">主色调按钮</button>
  <button type="warn">警告按钮</button>
</view>
<view>
  <view>------------size="mini"小尺寸按钮------------</view>
  <button size="mini">默认按钮</button>
  <button type="primary" size="mini">主色调按钮</button>
  <button type="warn" size="mini">警告按钮</button>
</view>
<view>
  <view>------------plain镂空按钮按钮------------</view>
  <button size="mini" plain>默认按钮</button>
  <button type="primary" size="mini" plain>主色调按钮</button>
  <button type="warn" size="mini" plain>警告按钮</button>
</view>
<!-- image图片组件 -->
<view>
  <image class="img1" src="/img/1.jpg" mode="头像" mode="aspectFill"/>
</view>



